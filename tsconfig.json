{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noEmit": true,
    "lib": ["ES2015", "DOM"]
  },
  "include": ["core/**/*", "demo/**/*", "*.d.ts", "ui/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
