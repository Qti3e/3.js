{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noEmit": true,
    "lib": ["ES2015", "DOM"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "core/**/*",
    "demo/**/*",
    "*.d.ts",
    "electron/**/*",
    "frontend/**/*",
    "modules/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
